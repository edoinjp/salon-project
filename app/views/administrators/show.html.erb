<!-- app/views/administrators/show.html.erb -->
<h1>Administrator Dashboard</h1>
<h2>My Bookings</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Service</th>
      <th>Date</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.user.email %></td>
        <td><%= booking.service.name %></td>
        <td><%= booking.booking_date %></td>
        <td><%= booking.booking_status %></td>
        <td>
          <% if booking.booking_status == 'Pending' %>
            <%= link_to 'Accept', administrator_accept_booking_path(@administrator, booking_id: booking.id), method: :patch, class: 'btn btn-success' %>
            <%= link_to 'Decline', administrator_decline_booking_path(@administrator, booking_id: booking.id), method: :patch, class: 'btn btn-danger' %>
          <% else %>
            <span class="text-muted">Action not available</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
