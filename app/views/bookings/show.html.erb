<div class="container">
  <h1>Edit Booking</h1>
  <p>
    <strong>Booking Date:</strong>
    <%= @booking.booking_date %>
  </p>
  <!-- Add more details here -->
  <p>
    <strong>User:</strong>
    <%= @booking.user.user_name %>
  </p>
  <p>
    <strong>Service:</strong>
    <%= @booking.service.name %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= @booking.booking_status %>
  </p>
  <!-- End of additional details -->
  <div class="btn-group" role="group">
    <%= link_to 'Back', bookings_path, class: 'btn btn-secondary mr-2' %>
    <%= link_to 'Edit', edit_booking_path(@booking), class: 'btn btn-primary mr-2' %>
    <%= form_tag booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <%= submit_tag 'Destroy', class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
