<h1>Listing Bookings</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Booking Date</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.booking_date %></td>
          <td><%= booking.booking_status || "Pending" %></td>
          <td><%= link_to 'Show', booking, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Booking', new_booking_path, class: "btn btn-success" %>
