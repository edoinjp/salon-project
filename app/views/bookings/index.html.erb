<div class="container">
  <h1 class="my-4">Listing Bookings</h1>

  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Booking Date</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.booking_date %></td>
            <td><%= booking.booking_status || "Pending" %></td>
            <td>
              <%= link_to 'Show', booking, class: "btn btn-outline-primary btn-sm mr-2" %>
              <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-outline-secondary btn-sm mr-2" %>
              <%= form_tag booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= submit_tag 'Destroy', class: 'btn btn-outline-danger btn-sm' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New Booking', new_booking_path, class: "btn btn-primary btn-lg" %>
</div>
