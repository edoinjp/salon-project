<%= form_with(model: booking, local: true, html: { class: "bootstrap-form" }) do |form| %>
  <% if booking.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title for Booking Date -->
  <div class="form-group">
    <label class="control-label">Booking Date</label>
    <!-- Booking Date and Time Field -->
    <%= form.datetime_select :booking_date, { class: "form-control" }, { ampm: true, minute_step: 15 } %>
  </div>

  <!-- Service Selection Field -->
  <div class="form-group">
    <%= form.label :service_id, class: "control-label" %>
    <%= form.collection_select :service_id, Service.all, :id, :name, { prompt: "Select Service" }, { class: "form-control" } %>
  </div>

  <!-- Administrator Selection Field -->
  <div class="form-group">
    <%= form.label :administrator_id, class: "control-label" %>
    <%= form.collection_select :administrator_id, Administrator.all, :id, :username, { prompt: "Select Administrator" }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
