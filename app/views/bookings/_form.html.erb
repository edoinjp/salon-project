<%= form_with(model: booking, local: true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Booking Date Field -->
  <div class="field">
    <%= form.label :booking_date %>
    <%= form.datetime_field :booking_date %>
  </div>

  <!-- Service Selection Field -->
  <div class="field">
    <%= form.label :service_id %>
    <%= form.collection_select :service_id, Service.all, :id, :name %>
  </div>

  <!-- Administrator Selection Field -->
  <div class="field">
    <%= form.label :administrator_id %>
    <%= form.collection_select :administrator_id, Administrator.all, :id, :username %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
