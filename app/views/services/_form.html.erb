<div class="container mt-4">
  <%= form_with(model: @service, local: true) do |form| %>
    <% if @service.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @service.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if @service.persisted? %>
      <h2 class="text-center mb-4">Edit Service</h2>
    <% else %>
      <h2 class="text-center mb-4">Create a New Service</h2>
    <% end %>

    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a name for the service.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :duration, class: "form-label" %>
          <%= form.number_field :duration, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a valid duration for the service.
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :price, class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <%= form.number_field :price, class: "form-control", step: 0.01, required: true %>
            <div class="invalid-feedback">
              Please provide a valid price for the service.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :order_sequence, class: "form-label" %>
          <%= form.number_field :order_sequence, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
      <div class="invalid-feedback">
        Please provide a description for the service.
      </div>
    </div>

    <% if @service.persisted? %>
      <!-- For editing an existing service -->
      <%= form.submit "Update Service", class: "btn btn-primary btn-lg btn-block" %>
    <% else %>
      <!-- For creating a new service -->
      <%= form.submit "Create Service", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  <% end %>
</div>
